{
  "compilerOptions": {
    "baseUrl": "./",
    "checkJs": true,
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["dom", "ESNext"],
    "outDir": "",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@types/*",
      "./types"
    ],
    "paths": {}
  },
  "include": ["**/*"],
  "exclude": [
    "node_modules"
  ]
}
